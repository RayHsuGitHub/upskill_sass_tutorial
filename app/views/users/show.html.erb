<div class = "container">
  <div class ="row">
    <div class = "col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: "avatar-img"%>
  </div>      
        <div class = "col-md-6">
             <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
             <%= @user.profile.job_title %>
          <h3>Contact Information</h3>
          <div class ="well box-text profile-contact">
            <% if true #current_user.plan_id == 2 %>
            <%= @user.profile.phone_number %>
            <%= @user.profile.contact_email %>
            <% end %>
        </div>
        <h3>Description</h3>
        <div class ="well box-text profile-description">
            <%= @user.profile.description %>
        </div>
        
    </div>
  </div>
</div>
